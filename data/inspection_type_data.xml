<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Inspection Types -->
    <record id="inspection_type_end_of_term" model="device.inspection.type">
        <field name="name">End of Term Check</field>
        <field name="description">Inspection performed at the end of academic term to assess device condition before renewal or return</field>
        <field name="sequence">10</field>
        <field name="color">1</field>
    </record>

    <record id="inspection_type_renewal" model="device.inspection.type">
        <field name="name">Renewal Check</field>
        <field name="description">Inspection performed when extending custody period to ensure device is in good condition</field>
        <field name="sequence">20</field>
        <field name="color">3</field>
    </record>

    <record id="inspection_type_return" model="device.inspection.type">
        <field name="name">Return Inspection</field>
        <field name="description">Final inspection performed when device is returned permanently (e.g., resignation, transfer)</field>
        <field name="sequence">30</field>
        <field name="color">2</field>
    </record>

    <record id="inspection_type_periodic" model="device.inspection.type">
        <field name="name">Periodic Check</field>
        <field name="description">Regular periodic inspection to monitor device condition during use</field>
        <field name="sequence">40</field>
        <field name="color">5</field>
    </record>

    <record id="inspection_type_damage_assessment" model="device.inspection.type">
        <field name="name">Damage Assessment</field>
        <field name="description">Special inspection performed to assess damage and determine repair requirements</field>
        <field name="sequence">50</field>
        <field name="color">9</field>
    </record>
</odoo>